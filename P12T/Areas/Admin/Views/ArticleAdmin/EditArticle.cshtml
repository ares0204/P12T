
@{
    ViewBag.Title = "EditArticle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@model P12T.Models.Article

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Article</h1>
    </div>

    <div class="p-5">
        @using (Html.BeginForm("EditArticle", "ArticleAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content)
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @id = "editContent" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>

            <button type="submit" class="btn btn-primary mt-2 w-100">Edit Product</button>
        }
    </div>
</div>

<script>
    ClassicEditor
        .create(document.querySelector( '#editContent' ) )
        .catch( error => {
            console.error( error );
        } );
</script>