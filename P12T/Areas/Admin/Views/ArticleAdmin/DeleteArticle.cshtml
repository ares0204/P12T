
@{
    ViewBag.Title = "DeleteArticle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@model P12T.Models.Article

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Article Product</h1>
    </div>

    <div class="p-5">
        @using (Html.BeginForm("DeleteArticle", "ArticleAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <span>Bạn có chắc là muốn xoá tin này không?</span>
                <label asp-for="Title"></label>
                <input asp-for="Title" disabled class="form-control" placeholder="@Model.Title" />
            </div>

            <button type="submit" class="btn btn-primary mt-2 w-100 mb-3">Delete</button>

            @Html.ActionLink("Back to List", "Index", "ArticleAdmin", null, new { @class = "btn btn-secondary w-100" })
        }
    </div>
</div>

